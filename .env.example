# Core SystemManager authentication settings
SYSTEMMANAGER_AUTH_MODE=token
SYSTEMMANAGER_REQUIRE_AUTH=true
SYSTEMMANAGER_ENABLE_APPROVAL=false
SYSTEMMANAGER_SHARED_SECRET=change-me
SYSTEMMANAGER_JWT_SECRET=

# TSIDP (Tailscale Identity Provider) OAuth configuration
TSIDP_URL=https://tsidp.tailf9480.ts.net
TSIDP_CLIENT_ID=systemmanager-dev
TSIDP_CLIENT_SECRET=
TSIDP_REDIRECT_URI=http://localhost:8900/callback
TSIDP_SCOPES="openid profile email"

# GoFast MCP authentication bridge
SYSTEMMANAGER_MCP_AUTH_URL=https://gofastmcp.com/servers/auth/authentication
MCP_AUTH_CLIENT_ID=
MCP_AUTH_CLIENT_SECRET=

# Optional base URL used when FastMCP advertises HTTP endpoints
SYSTEMMANAGER_BASE_URL=http://localhost:8080

# ==== PATH CONFIGURATION ====
# Critical system paths - modify these to customize installation locations

# Core System Paths
SYSTEMMANAGER_DOCKER_SOCKET_PATH=/var/run/docker.sock
SYSTEMMANAGER_STACKS_DIR=/opt/stacks
SYSTEMMANAGER_BASE_URL=http://localhost:8080

# Installation & Data Directories  
SYSTEMMANAGER_INSTALL_DIR=/opt/systemmanager
SYSTEMMANAGER_DATA_DIR=/var/lib/systemmanager
SYSTEMMANAGER_CONFIG_DIR=/etc/systemmanager
SYSTEMMANAGER_LOG_DIR=/var/log/systemmanager
SYSTEMMANAGER_CREDENTIAL_DIR=/etc/systemmanager/credentials

# Flexible Application Scanning
# Base directories for scanning for applications (comma-separated)
SYSTEMMANAGER_APP_SCAN_CONFIG_DIRS=/etc,/usr/local/etc,/opt,/etc/config
SYSTEMMANAGER_APP_SCAN_DATA_DIRS=/var/lib,/var/local/lib,/opt/data,/storage

# Temporary directories for operations (comma-separated)
SYSTEMMANAGER_TEMP_DIRS=/tmp,/var/tmp

# Security & Access Control
# Allowed base directories for file operations (comma-separated)
SYSTEMMANAGER_ALLOWED_BASE_DIRS=/tmp,/var/tmp,/var/log,/opt,/home

# Proxmox Integration
SYSTEMMANAGER_PROXMOX_DUMP_DIR=/var/lib/vz/dump

# TailOpsMCP Installation (for validation scripts)
TAILOPSMCP_INSTALL_DIR=/opt/tailopsmcp

